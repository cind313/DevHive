@model List<DevHive.Web.Models.Domain.BlogPost>

@{
    int nextPage = Convert.ToInt32(ViewBag.PageNumber) +1;
    int prevPage = Convert.ToInt32(ViewBag.PageNumber) -1;
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h2>All Blog Posts - Admin Functionality</h2>
    </div>
</div>


<form method="get"
      asp-controller="AdminBlogPosts" ,
      asp-action="List">
    <div class="container mt-5">
        <div class="row">
            <div class="col col-md-3 d-flex">
                <input type="text" class="form-control"
                       name="searchQuery" value="@ViewBag.SearchQuery" />
                <button type="submit" class="btn btn-outline-dark ms-3">Search</button>
            </div>
        </div>
    </div>
</form>


<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 45%">Page Title</th>
                    <th>
                        Date
                        <span>
                            <span>
                                <a class="btn btn-light"
                                   asp-controller="AdminBlogPosts"
                                   asp-action="List"
                                   asp-route-sortBy="PublishedDate"
                                   asp-route-sortDirection="Asc"
                                   asp-route-searchQuery="@ViewBag.searchQuery">

                                    <i class="bi bi-arrow-up"></i>
                                </a>
                            </span>
                            <span>
                                <a class="btn btn-light"
                                   asp-controller="AdminBlogPosts"
                                   asp-action="List"
                                   asp-route-sortBy="PublishedDate"
                                   asp-route-sortDirection="Desc"
                                   asp-route-searchQuery="@ViewBag.searchQuery">

                                    <i class="bi bi-arrow-down"></i>
                                </a>
                            </span>
                        </span>
                    </th>
                    <th>Tags</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.PageTitle</td>
                        <td>@blogPost.PublishedDate</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area=""
                               asp-controller="AdminBlogPosts"
                               asp-action="Edit"
                               asp-route-id="@blogPost.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="AdminBlogPosts"
                       asp-action="List"
                       asp-route-pageNumber="@prevPage"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortBy="@ViewBag.SortBy"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="AdminBlogPosts"
                           asp-action="List"
                           asp-route-pageNumber="@i"
                           asp-route-pageSize="@ViewBag.PageSize"
                           asp-route-sortBy="@ViewBag.SortBy"
                           asp-route-sortDirection="@ViewBag.SortDirection">
                            @i
                        </a>
                    </li>
                }


                <li class="page-item">
                    <a class="page-link"
                       asp-controller="AdminBlogPosts"
                       asp-action="List"
                       asp-route-pageNumber="@nextPage"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortBy="@ViewBag.SortBy"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        Next
                    </a>
                </li>
            </ul>
        </nav>

    }
    else
    {
        <p>No Blog Posts Found!</p>
    }

</div>