@model DevHive.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-5 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                DevHive - The Dev Blog
            </h1>
            <p class="lead">
                Join DevHive to explore a wide range of coding topics,
                from web fundamentals like HTML and CSS to cutting-edge areas like AI and machine learning.
                Register now to join our community, engage with fellow developers,
                and unlock the ability to like and comment on posts.
            </p>
        </div>

        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/57690/pexels-photo-57690.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="DevHive - Dev blogs"
                 class="d-block mx-lg-auto img-fluid hero-img" width="300" />
        </div>
    </div>
</div>


<div class="container w-100">
    <div class="row justify-content-center ">
        <div class="col-9 d-flex flex-wrap justify-content-center gap-2">
            @if (Model != null && Model.Tags.Any())
            {
                foreach (var tag in Model.Tags)
                {
                    <a 
                       asp-controller="Home"
                       asp-action="Index"
                       asp-route-tag="@tag.Name">
                        <span class="badge bg-dark me-1">
                            @tag.DisplayName
                        </span>
                    </a>
                }
            }
        </div>
    </div>
</div>


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-7">
            @if (Model != null && Model.BlogPosts.Any())
            {
                foreach (var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-3">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                             class="mb-2 d-block img-fluid" />

                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-4">
                            Author: @blogPost.Author
                            <br />
                            Published Date: @blogPost.PublishedDate.ToShortDateString()
                        </p>


                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>


                        <p class="mb-4">@blogPost.ShortDescription</p>

                        <a class="btn btn-dark"
                           asp-area=""
                           asp-controller="Blogs"
                           asp-action="Index"
                           asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
                    </div>

                }
            }
        </div>
    </div>
</div>