@model DevHive.Web.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="auth-wrapper">
        <div class="card shadow-sm auth-card">
            <div class="card-body px-4 py-4">
                <h3 class="text-center mb-4">Register</h3>

                <form asp-controller="Account" asp-action="Register" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    @* Show validation only after a failed post *@
                    @if (ViewContext.HttpContext.Request.Method == "POST" && !ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    }

                    <div class="mb-3">
                        <label class="form-label" asp-for="Username">Username</label>
                        <input type="text" class="form-control" asp-for="Username" autocomplete="username" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Email">Email</label>
                        <input type="email" class="form-control" asp-for="Email" autocomplete="email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Password">Password</label>
                        <input type="password" class="form-control" asp-for="Password" autocomplete="new-password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-dark px-4 mt-4">Register</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
